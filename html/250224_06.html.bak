<!DOCTYPE html>
<html lang="en">
 <head>
  <meta charset="UTF-8">
  <title>Document</title>
  <script>
	var now=new Date();
	var w=now.getDay();
	// int arr[]=new int[3];
	// var arr=new Array();
	
	var week=new Array(7);
	
	week[0]='일';
	week[1]='월';
	week[2]='화';
	week[3]='수';
	week[4]='목';
	week[5]='금';
	week[6]='토';
	
	document.write('<h3>'+week[w]+'요일</h3>');
	
	var colors=new Array(6);
	colors[0]='red';
	colors[1]='blue';
	colors[2]='green';
	colors[3]='gray';
	colors[4]='pink';
	colors[5]='orange';
	
	for(var i=0;i<colors.length;i++){
		document.write('<h3 style="color:'+colors[i]+'>안녕하세요 반갑습니다.</h3>');
	}
  </script>
 </head>
